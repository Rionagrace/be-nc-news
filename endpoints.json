{
	"GET /api": {
		"description": "serves up a json representation of all the available endpoints of the api"
	},
	"GET /api/topics": {
		"description": "serves an array of all topics",
		"queries": [],
		"exampleResponse": {
			"topics": [{ "slug": "football", "description": "Footie!" }]
		}
	},
	"GET /api/articles": {
		"description": "serves an array of all articles",
		"queries": ["author", "topic", "sort_by", "order"],
		"exampleResponse": {
			"articles": [
				{
					"title": "Seafood substitutions are increasing",
					"topic": "cooking",
					"author": "weegembump",
					"body": "Text from the article..",
					"created_at": "2018-05-30T15:59:13.341Z",
					"votes": 0,
					"comment_count": 6
				}
			]
		}
	},
	"GET /api/articles/:article_id": {
		"description": "serves specified article",
		"queries": [],
		"exampleResponse": {
			"article": {
				"title": "Seafood substitutions are increasing",
				"topic": "cooking",
				"author": "weegembump",
				"body": "Text from the article..",
				"created_at": "2018-05-30T15:59:13.341Z",
				"votes": 0
			}
		}
	},
	"PATCH /api/articles/:article_id": {
		"description": "updates specified article votes",
		"queries": [],
		"exampleResponse": {
			"article": {
				"title": "Seafood substitutions are increasing",
				"topic": "cooking",
				"author": "weegembump",
				"body": "Text from the article..",
				"created_at": "2018-05-30T15:59:13.341Z",
				"votes": 1
			}
		}
	},

	"GET /api/articles/:article_id/comments": {
		"description": "serves comments matching author id specified",
		"queries": [],
		"exampleResponse": {
			"comment_id": 9,
			"body": "Superficially charming",
			"article_id": 1,
			"author": "icellusedkars",
			"votes": 0,
			"created_at": "2020-01-01T03:08:00.000Z"
		}
	},
	"POST /api/articles/:article_id/comments": {
		"description": "Posts a comment to a specified article id and returns that new comment",
		"queries": [],
		"exampleResponse": {
      "comment_id": 19,
      "body": "loved this",
      "article_id": 1,
      "author": "rogersop",
      "votes": 0,
      "created_at": "2024-10-15T08:09:05.386Z"
    }
	},
	"DELETE /api/comments/:comment_id": {
		"description": "deletes specified comment",
